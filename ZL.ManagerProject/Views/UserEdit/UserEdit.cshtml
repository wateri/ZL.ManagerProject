@model System.Data.DataTable
@{
    ViewBag.Title = "UserEdit";
    Layout = "~/Views/Shared/IndexMaster.cshtml";
}

<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> 用户信息编辑</h4>
            <form class="form-horizontal style-form" method="post" action="/UserEdit/Save/@Model.Rows[0]["USERID"]">
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">用户名</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="@Model.Rows[0]["USERNAME"]" name="username">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">密码</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="@Model.Rows[0]["PASSWORDS"]" name="pwd">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">用户级别</label>
                    <div class="col-sm-10">
                        <select class="form-control" name="pri">

                            if (@Model.Rows[0]["PRIVILEGE"].ToString() == "1")
                            {
                            <option selected="selected">超级管理员</option>
                            }
                            else
                            {
                            <option selected="selected">一般用户</option>
                            }
                        </select>
                    </div>
                </div>
                <div style="margin: 0 auto; width: 100%; text-align: center; ">
                    <button type="submit" class="btn btn-primary" style="">保存</button>
                    <button type="button" class="btn btn-success" onclick="back()">返回</button>
                </div>
            </form>
        </div>
    </div><!-- col-lg-12-->
</div><!-- /row -->

<script type="text/javascript">
    function back() {
        window.location = "/UserManager/UserManager/";
    }
</script>  