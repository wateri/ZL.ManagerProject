@{
    ViewBag.Title = "UploadPicture";
    Layout = "~/Views/Shared/IndexMaster.cshtml";
}
<link href="http://cdn.bootcss.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet"> 
<link rel="stylesheet" type="text/css" href="~/Content/bootstrapFileInput/css/default.css">
<link href="~/Content/bootstrapFileInput/css/fileinput.css" media="all" rel="stylesheet" type="text/css" />
<script src="http://cdn.bootcss.com/jquery/1.11.0/jquery.min.js" type="text/javascript"></script>
<script>window.jQuery || document.write('<script src="~/Content/bootstrapFileInput/js/jquery-1.11.0.min.js"><\/script>')</script>
<script src="~/Content/bootstrapFileInput/js/fileinput.js" type="text/javascript"></script>
<!--简体中文-->
<script src="~/Content/bootstrapFileInput/js/locales/zh.js" type="text/javascript"></script>
<!--繁体中文-->
<script src="~/Content/bootstrapFileInput/js/locales/zh-TW.js" type="text/javascript"></script>
<script src="http://cdn.bootcss.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
<form enctype="multipart/form-data" id="addForm" action="/UploadPicture/UploadPicture">
    <br />

    <div class="form-group">
        <input id="file-zh" name="filename" type="file" multiple>
    </div>

</form>

<script>
        var control = $('#file-zh');
        control.fileinput({
            language: 'zh', //设置语言
            uploadUrl: "/UploadPicture/UploadPicture", //上传的地址
            allowedFileExtensions: ['jpg', 'png', 'gif'],//接收的文件后缀
            uploadAsync: true, //默认异步上传
            showUpload: true, //是否显示上传按钮
            showCaption: true,//是否显示标题
            maxFileCount: 10,
            browseClass: "btn btn-primary", //按钮样式  
            validateInitialCount: true
        });

        
        $("#file-zh").on('fileuploaded', function (event, data, previewId, index) {
            var response = data.response;

            alert(data.success);
        });

</script>